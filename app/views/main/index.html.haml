.container
  .row
    .col-md-12
      %h1 TCS where_is simulator
      - if @response
        %h2 Previous query
        %p= @response.first
        %h3 Response
        - if @response.last.size > 1
          %p I couldn't narrow your request down to just one conference room.
        - @response.last.each do |resp|
          %p= resp
        %h2 New query
      = form_tag root_path do
        .form-group
          = text_field_tag :query
        = submit_tag 'Submit', class: 'btn btn-default'